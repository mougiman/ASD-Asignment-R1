<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="true" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            3000
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>asd.demo.controller.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
	   <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>asd.demo.controller.ValidatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>itemController</servlet-name>
        <servlet-class>asd.demo.controller.itemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>itemController</servlet-name>
        <url-pattern>/item/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>sellerController</servlet-name>
        <servlet-class>asd.demo.controller.sellerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sellerController</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>	
    <servlet>
        <servlet-name>adminPageController</servlet-name>
        <servlet-class>asd.demo.controller.adminPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminPageController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allUsersController</servlet-name>
        <servlet-class>asd.demo.controller.allUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsersController</servlet-name>
        <url-pattern>/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>asd.demo.controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/reg-login</url-pattern>
    </servlet-mapping>
		
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
